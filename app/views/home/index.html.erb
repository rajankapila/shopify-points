<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({ title: "Home" });
    });
  </script>
<% end %>

<div class="container">
  <div class="alert-container"></div>
  <h2>Points Earned Per Dollar Spent</h2>
  <form id="points_earned_per_dollar_form">
    <div class="row">
      <div class="form-group col-xs-12 col-sm-2">
        <label for="points">Points Per Dollar Spent</label>
      </div>
      <div class="form-group col-xs-12 col-sm-6">
        <input type="text" class="form-control " id="points_per_dollar" 
          aria-describedby="pointsHelp" 
          value="<%= @current_shop.shop_config.points_per_dollar %>" 
        >
        <small id="pointsHelp" class="form-text text-muted">
          Customers will receive this number of points per dollar 
          spent on your store. Max value is 1000.
        </small>
      </div>  
      <div class="form-group col-xs-12 col-sm-4">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </div>  
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
  
  <hr>

  <h2>Customers</h2>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 col-sm-4 text-uppercase font-weight-bold" >
        Name
      </div>      
      <div class="col-xs-12 col-sm-4 text-uppercase font-weight-bold" >
        Email
      </div>
      <div class="col-xs-12 col-sm-2 text-uppercase font-weight-bold" >
        Points
      </div>
    </div>
     <hr/>
    <% @customers.each do |customer| %>
      <div class="row">
        <div class="col-xs-12 col-sm-4" >
          <%= customer.to_s %>
        </div>      
        <div class="col-xs-12 col-sm-4" >
          <%= customer.email %>
        </div>
        <div class="col-xs-12 col-sm-2 " >
          <%= customer.points %>
        </div>
      </div>
      <hr/>
    <% end %>
  </div>
  <%= paginate @customers %>
</div>
